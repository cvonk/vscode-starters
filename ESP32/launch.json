{
    "version": "0.2.0",
    "env": {
        "tools": "C:/Espressif/ESP32/msys32/opt/xtensa-esp32-elf",
        "api": "C:/Espressif/ESP32/msys32/opt/esp-idf",
        "target": "xtensa-esp32-elf"
    },
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Cpp OpenOCD",
            "MIMode": "gdb",
            "miDebuggerPath": "${env:tools}/bin/${env:target}-gdb.exe",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/build/${workspaceFolderBasename}.elf",
            //"setupCommands": [
            //    { "text": "-enable-pretty-printing" },
            //    { "text": "target remote :3333" },
            //    { "text": "mon reset halt" },
            //    { "text": "flushregs" },
            //    { "text": "thb app_main" },
            //    { "text": "c" },
            //],
            "externalConsole": false,
            "logging": {  // https://github.com/Microsoft/vscode-cpptools/blob/master/Documentation/FAQs.md#how-to-enable-logging
                "trace": true, 
                "traceResponse": true,
                "engineLogging": true
            }
        }
    ]
}
