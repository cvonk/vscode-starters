    "version": "0.2.0",
    "env": {
        "tools": "C:/Espressif/ESP32/msys32/opt/xtensa-esp32-elf",
        "api": "C:/Espressif/ESP32/msys32/opt/esp-idf",
        "target": "xtensa-esp32-elf"
    },
    "configurations": [
        {
            "name": "GDB/JTAG",
            "type": "gdb",
            "request": "launch",
            "target": "./build/${workspaceFolderBasename}.elf",
            "cwd": "${workspaceFolder}",
            "gdbpath": "${env:tools}/bin/${env:target}-gdb.exe",
            "autorun": [
              "target remote :3333",
              "mon reset halt",
              "flushregs",
              "thb app_main",
              "c"
            ],
            "preLaunchTask": "openocd" // refers entry in to tasks.json
        }
    ]
}
